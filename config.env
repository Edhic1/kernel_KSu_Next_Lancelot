# Configuration file for kernel build workflow
# This file defines environment variables used by build-kernel.yml in GitHub Actions

# Kernel Source Information
# URL of the kernel source repository
KERNEL_SOURCE=https://github.com/MrShockWAVEE/Proton_kernel_Xioami_mt6768
# Branch of the kernel source to clone
KERNEL_SOURCE_BRANCH=ShockWAVE-Tree-WIP
# Kernel configuration file (defconfig) to use
KERNEL_CONFIG=lancelot_defconfig
# Name of the compiled kernel image file
KERNEL_IMAGE_NAME=Image.gz-dtb
# Target architecture for the kernel
KERNEL_ARCH=arm64

# Feature Flags
# Enable KernelSU integration (true/false)
ENABLE_KERNELSU=true
# URL for the KernelSU setup script
KERNELSU_SETUP_URL=https://raw.githubusercontent.com/MrShockWAVEE/SukisU-Ultra/main/kernel/setup.sh
# Tag or argument passed to the KernelSU setup script
KERNELSU_SETUP_TAG=susfs-dev
# Revert KernelSU patches if applied (true/false)
KSU_REVERT=false
# Add Kprobes configuration to the kernel (true/false)
ADD_KPROBES_CONFIG=false
# Apply KernelSU hooks patch (true/false)
KSU_HOOKS_PATCH=false
# Add OverlayFS configuration to the kernel (true/false)
ADD_OVERLAYFS_CONFIG=true
# Add APatch configuration to the kernel (true/false)
ADD_APATCH_CONFIG=true
# Add Android-specific support configurations (true/false)
ADD_ANDROID_SUPPORT=true

# Compiler Settings
# Use a custom Clang compiler (true/false)
USE_CUSTOM_CLANG=true
# Source URL for the custom Clang compiler (e.g., tar.gz file)
CUSTOM_CLANG_SOURCE=https://github.com/ZyCromerZ/Clang/releases/download/21.0.0git-20250425-release/Clang-21.0.0git-20250425.tar.gz
# Branch for custom Clang (if applicable, leave empty if not used)
CUSTOM_CLANG_BRANCH=
# Use a custom GCC compiler (true/false)
USE_CUSTOM_GCC=false
# Use custom GCC for ARM64 (true/false)
USE_CUSTOM_GCC_64=true
# Source URL for custom GCC ARM64 (e.g., tar.xz file)
CUSTOM_GCC_64_SOURCE=https://snapshots.linaro.org/gnu-toolchain/14.0-2023.06-1/aarch64-linux-gnu/gcc-linaro-14.0.0-2023.06-x86_64_aarch64-linux-gnu.tar.xz
# Branch for custom GCC ARM64 (if applicable, leave empty if not used)
CUSTOM_GCC_64_BRANCH=
# Use custom GCC for ARM32 (true/false)
USE_CUSTOM_GCC_32=true
# Source URL for custom GCC ARM32 (e.g., tar.xz file)
CUSTOM_GCC_32_SOURCE=https://snapshots.linaro.org/gnu-toolchain/14.0-2023.06-1/arm-linux-gnueabihf/gcc-linaro-14.0.0-2023.06-x86_64_arm-linux-gnueabihf.tar.xz
# Branch for custom GCC ARM32 (if applicable, leave empty if not used)
CUSTOM_GCC_32_BRANCH=
# Enable GCC from AOSP for compilation (true/false)
ENABLE_GCC_AOSP=false
# Enable GCC ARM64 from AOSP (true/false)
ENABLE_GCC_ARM64=true
# Enable GCC ARM32 from AOSP (true/false)
ENABLE_GCC_ARM32=true
# Clang branch for AOSP (used when custom Clang/GCC is not enabled)
CLANG_BRANCH=android12-stable
# Clang version for AOSP (used when custom Clang/GCC is not enabled)
CLANG_VERSION=r416183b

# Build Options
# Build a boot image as part of the workflow (true/false)
BUILD_BOOT_IMG=true
# URL of the source boot image to download
SOURCE_BOOT_IMAGE=https://github.com/MrShockWAVEE/Proton_kernel_Xioami_mt6768/raw/main/boot/boot.img

# Troubleshooting Options
# Disable Link Time Optimization (LTO) if needed (true/false)
DISABLE_LTO=false
# Disable compiler warnings as errors (true/false)
DISABLE_CC_WERROR=false
# Apply fix for WiFi rhythm issues (true/false)
FIX_WIFI_RHYTHM=false

# Miscellaneous Settings
# Remove unused packages to free disk space (true/false)
REMOVE_UNUSED_PACKAGES=false
# Enable ccache to speed up compilation (true/false)
ENABLE_CCACHE=false
# Append local version to the output filename (true/false)
ADD_LOCALVERSION_TO_FILENAME=false

# System Resource Settings
# Size of the swap space in gigabytes
SWAP_SIZE_GB=6

# mkbootimg Tools Configuration
# Repository URL for mkbootimg tools
MKBOOTIMG_REPO=https://android.googlesource.com/platform/system/tools/mkbootimg
# Branch of the mkbootimg tools repository to clone
MKBOOTIMG_BRANCH=master-kernel-build-2022

# ccache Configuration
# Command to check the compiler for ccache consistency
CCACHE_COMPILERCHECK="%compiler% -dumpmachine; %compiler% -dumpversion"
# Disable hashing of directory paths in ccache (true/false)
CCACHE_NOHASHDIR=true
# Use hard links instead of copies in ccache (true/false)
CCACHE_HARDLINK=true
